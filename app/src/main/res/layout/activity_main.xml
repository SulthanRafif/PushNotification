<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form Pemesanan Makanan"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:id="@+id/label_form"
        />


    <EditText
        android:id="@+id/edit_nama"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="30dp"
        android:hint="Nama Pemesan"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/textHint"
        app:backgroundTint="@color/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/edit_makanan"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="Makanan yang Dipesan"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/textHint"
        app:backgroundTint="@color/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_nama"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/edit_jumlah_makanan"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Jumlah makanan yang dipesan"
        android:paddingStart="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/textHint"
        android:inputType="number"
        app:backgroundTint="@color/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_makanan"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/edit_alamat"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Alamat pemesan"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/textHint"
        app:backgroundTint="@color/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_jumlah_makanan"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/edit_no_telp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="No telepon"
        android:paddingStart="10dp"
        android:inputType="number"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/textHint"
        app:backgroundTint="@color/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_alamat"
        android:paddingLeft="10dp" />



    <Button
        android:id="@+id/button2"
        style="@style/buttonPrimaryTheme"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:onClick="onSubmit"
        android:text="@string/submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_no_telp" />


</androidx.constraintlayout.widget.ConstraintLayout>